@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<List<WEDT.Searcher.Models.DocumentModel>>

@{
    Layout = "Views/_Layout.cshtml";
}

<h1>Znalezione Dokumenty: </h1>
<br/>
@if(Model.Count == 0)
{
    <p>Nie znaleziono pasujących dokumentów...</p>
}
@foreach (var item in Model)
{
   <div style="margin-bottom:20px">
       <span><strong>Id: </strong> @item.Id</span><br/>
       <span><string>Tekst: </string> @item.Text</span>
   </div> 
}
<a href="/">Powrót do wyszukiwarki</a>